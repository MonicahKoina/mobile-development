<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="404dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="243dp"
            android:layout_height="26dp"
            android:text="Enter your password"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            tools:layout_editor_absoluteY="336dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:text="Log in with Apple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="162dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="274dp"
            android:layout_height="43dp"
            android:text="Log in with Google"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/button"
            tools:layout_editor_absoluteY="202dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="161dp"
            android:layout_height="22dp"
            android:text="  or continue with email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.596"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="261dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="   Tasktugas  "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Tasktugas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="47dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up or Login to manage your projects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="78dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="147dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="text"
            android:text="Log in"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="186dp"
            android:layout_height="42dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            android:text="Sign Up"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="242dp"
            android:layout_height="22dp"
            android:text="Enter your email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="306dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="183dp"
            android:layout_height="19dp"
            android:text="Forgot password?"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="371dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="249dp"
            android:layout_height="43dp"
            android:text="Log in"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="409dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="275dp"
            android:layout_height="35dp"
            android:text="By signing up you agree to our terms of services and privacy policy"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="466dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>